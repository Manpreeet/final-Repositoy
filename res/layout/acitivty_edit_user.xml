<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dip"
            android:background="@android:color/black" >

            <ImageView
                android:id="@+id/backImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:onClick="onClickBack"
                android:padding="5dip"
                android:contentDescription="@null"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Edit User"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/navigationImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:onClick="openLeftPanel"
                android:padding="5dip"
                android:src="@drawable/ic_drawer" />
        </RelativeLayout>

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:padding="5dip" >

                    <TextView
                        android:id="@+id/emailText"
                        android:layout_width="90dip"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/email_hint" />

                    <EditText
                        android:id="@+id/emailInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/emailText"
                        android:background="@drawable/input"
                        android:ems="10"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="5dip"
                        android:paddingRight="5dip" >
                    </EditText>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:padding="5dip" >

                    <TextView
                        android:id="@+id/firstNameText"
                        android:layout_width="90dip"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="First Name" />

                    <EditText
                        android:id="@+id/firstNameInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/firstNameText"
                        android:background="@drawable/input"
                        android:ems="10"
                        android:inputType="text"
                        android:paddingLeft="5dip"
                        android:paddingRight="5dip" >
                    </EditText>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:padding="5dip" >

                    <TextView
                        android:id="@+id/lastNameText"
                        android:layout_width="90dip"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="Last Name" />

                    <EditText
                        android:id="@+id/lastNameInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/lastNameText"
                        android:background="@drawable/input"
                        android:ems="10"
                        android:inputType="text"
                        android:paddingLeft="5dip"
                        android:paddingRight="5dip" >
                    </EditText>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:padding="5dip" >

                    <TextView
                        android:id="@+id/cellNumberText"
                        android:layout_width="90dip"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="Cell phone" />

                    <EditText
                        android:id="@+id/cellNameInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/cellNumberText"
                        android:background="@drawable/input"
                        android:ems="10"
                        android:inputType="number"
                        android:paddingLeft="5dip"
                        android:paddingRight="5dip" >
                    </EditText>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:padding="5dip" >

                    <TextView
                        android:id="@+id/getEmailText"
                        android:layout_width="90dip"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="Get Emails" />

                    <CheckBox
                        android:id="@+id/getEmailCheck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/getEmailText"
                        android:text="" >
                    </CheckBox>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:padding="5dip" >

                    <TextView
                        android:id="@+id/passwordText"
                        android:layout_width="90dip"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="Password" />

                    <EditText
                        android:id="@+id/passwordInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/passwordText"
                        android:background="@drawable/input"
                        android:ems="10"
                        android:inputType="textPassword"
                        android:paddingLeft="5dip"
                        android:paddingRight="5dip" >
                    </EditText>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:padding="5dip" >

                    <TextView
                        android:id="@+id/retypePasswordText"
                        android:layout_width="90dip"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="Retype Password" />

                    <EditText
                        android:id="@+id/retypePasswordInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/retypePasswordText"
                        android:background="@drawable/input"
                        android:ems="10"
                        android:inputType="textPassword"
                        android:paddingLeft="5dip"
                        android:paddingRight="5dip" >
                    </EditText>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/roleParent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:orientation="vertical"
                    android:padding="5dip" >
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:padding="5dip" >

                    <TextView
                        android:id="@+id/permissionText"
                        android:layout_width="90dip"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="5dip"
                        android:text="Permissions" />

                    <CheckBox
                        android:id="@+id/daliyTaskStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/permissionText"
                        android:text="Daily Task Completed"
                        android:textColor="@android:color/black" >
                    </CheckBox>

                    <CheckBox
                        android:id="@+id/editRoleTaskStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/daliyTaskStatus"
                        android:layout_toRightOf="@+id/permissionText"
                        android:text="Edit Roles"
                        android:textColor="@android:color/black" >
                    </CheckBox>

                    <CheckBox
                        android:id="@+id/editScheduleStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/editRoleTaskStatus"
                        android:layout_toRightOf="@+id/permissionText"
                        android:text="Edit Scedule"
                        android:textColor="@android:color/black" >
                    </CheckBox>

                    <CheckBox
                        android:id="@+id/editTaskStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/editScheduleStatus"
                        android:layout_toRightOf="@+id/permissionText"
                        android:text="Edit Tasks"
                        android:textColor="@android:color/black" >
                    </CheckBox>

                    <CheckBox
                        android:id="@+id/editUserStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/editTaskStatus"
                        android:layout_toRightOf="@+id/permissionText"
                        android:text="Edit Users"
                        android:textColor="@android:color/black" >
                    </CheckBox>
                </RelativeLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="20dip"
                    android:background="#70b500"
                    android:onClick="onClickSave"
                    android:text="Save"
                    android:textColor="@android:color/white" >
                </Button>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/loadingProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="5dip"
        android:indeterminateDrawable="@drawable/my_progress_indeterminate"
        android:visibility="gone" />

</RelativeLayout>